default: &default
  pre:
    -
  success:
    -
  failure:
    - cat >> /tmp/failure
web:
  <<: *default
  post:
    - rm -f /var/tmp/chef/current
    - ls -s /var/tmp/chef/releases/<%= time_now %> current
    - chef-solo -c /var/tmp/current/try-stretcher/solo.rb -j /var/tmp/current/try-stretcher/nodes/192.168.34.42.json
